<!--pages/checkout/checkout.wxml-->
<view>
  <view class='header'>
    <view class='doctor-wrapper'>
      <view class='doctor-image'>
        <image src='../../images/user.png'></image>
      </view>
      <view class='doctor-info'>
          <view class='doctor-name'>{{name}}</view>
          <view class='doctor-company'>
              <text>{{office}}</text>
              <text>{{hospital}}</text>
          </view>
      </view>
    </view>
    <view class='setting' wx:if='{{doctorSetting}}'>
      <image src='../../images/settings.png'></image>
    </view>
  </view>
  <view class='check-date'>
      <view class='current-date'>
        <view class='prev' data-direction='0' bindtap='change'><image src='../../images/prev.png'></image></view>
        <view class='current'>{{year}}-{{month}}</view>
        <view class='next' data-direction='1' bindtap='change'><image src='../../images/next.png'></image></view>
      </view>
      <view class='date-header'>
        <view>日</view>
        <view>一</view>
        <view>二</view>
        <view>三</view>
        <view>四</view>
        <view>五</view>
        <view>六</view>
      </view>
      <view class='date-body'>
        <block wx:for='{{dateList}}' wx:key='{{item[1].day}}'>
          <view class='day'>
            <text class='{{item[1].today?"today":""}} radius'>{{item[1].day}}</text>
            <view class='{{item[1].isOver?"isOver":""}} status' wx:if='{{item[1].color}}'></view>
          </view>
        </block>
      </view>
  </view>
  <view class='picker-list'>
    <view class='title'>今日设置</view>
    <view class='list'>
      <view class='am'>
        <view class='left-area'>
            <view class='checkout'></view>
            <view class='label'>上午</view>
        </view>
        <view class='time'></view>
        <view class='setting'>设定</view>      
      </view>
      <view class='pm'>
        <view class='left-area'>
          <view class='checkout'></view>
          <view class='label'>下午</view>
        </view>

        <view class='time'></view>
        <view class='setting'>设定</view>
      </view>
      <view class='button-group'>
        <view class='confirm'>确认</view>
        <view class='cancel'>取消</view>
      </view>
    </view>
  </view>
</view>
